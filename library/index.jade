    body
      #library(v-bind:class="{'show-modal':showModal}")
        header#main-header
          .top-bar
            h1.screen-reader UX Library
            .wrapper
              .left
                a(href="/")
                  img#logo(src="../img/uxtools-logo.svg" alt="UX Tools")
              .right
                ul
                  li
                    a(href="/tools") 
                      span Tools
                  li
                    a(href="/library") 
                      span Library
                  li
                    a(href="https://blog.uxtools.co") 
                      span Blog
                  li
                    a(href="/about.html") 
                      span About
                  li
                    a(href="http://newsletter.uxtools.co")
                      button.small
                        | Subscribe
              #hamburger(@click="showMenu = true")
                .icon
                  include ../img/icons/menu.svg
                span Menu
          #sidebar(v-bind:class="{'show-menu': showMenu}")
            #shade.shade(@click="showMenu = false")
              .container
                ul
                  li
                    a(href="/tools") 
                      span Tools
                  li
                    a(href="/library") 
                      span Library
                  li
                    a(href="https://blog.uxtools.co") 
                      span Blog
                  li
                    a(href="/about.html") 
                      span About
                  li
                    a(href="http://newsletter.uxtools.co")
                      include ../img/icons/email.svg
                      span Subscribe
                #close.close(ng-click="$root.showMenu = false")
                  include ../img/icons/close.svg
          .bottom-bar
            .wrapper
              #search
                input(
                  placeholder="Search..." 
                  v-model="searchTerm" v-on:change="categoryData.categoryModel.tags=''")
                include ../img/icons/magnify.svg
                //- ng-change="categoryData.categoryModel.tags=''"
              #filters
                .select-wrapper
                  include ../img/icons/menu-down.svg
                  select(name="categoryFilter" v-model="categoryData.categoryModel.tags")
                    option(value="") All Categories
                    option(v-for="option in orderedCategoryOptions" v-bind:value="option.value") {{option.name}}
                  
        section
          .wrapper
            .filter-wrapper(v-show="categoryData.categoryModel.tags || searchTerm")
              .filter-growl 
                span Only showing "{{categoryData.categoryModel.tags}}{{searchTerm}}"
                span.close(@click="clearAll()") Dismiss
            ul#books
              //- li(ng-repeat="book in books | filter: categoryData.categoryModel.tags | filter: searchTerm | orderBy: 'recommendations.length' : true track by $index")
              li(v-for="book in filteredBooks")
                .book-wrapper
                  .image-container
                    a(v-bind:href="book.url" target="_blank" v-bind:title="book.title")
                    img.cover(
                       v-bind:alt="book.title" 
                       v-bind:src="'../img/book-covers/' + book.image")
                  .book-info
                    a(v-bind:href="book.url" target="_blank" v-bind:title="book.title")
                      h4.title {{ shortenedTitle(book.title) }}
                    h5
                      em by 
                      | {{ book.author }}
                    ul.tags
                      li(v-for="tag in book.tags" @click="clearAll(); categoryData.categoryModel.tags = tag") {{ tag }}
                .recommendation-wrapper
                  ul.recommendations(@click="showModal=true; setModalData(book);")
                    li
                      include ../img/icons/bookmark.svg
                    li.count {{book.recommendations.length}}
                    li(v-for="list in book.recommendations") 
                      img(v-bind:src="'../img/book-recommendations/' + bookLists[list].image")
              li(style="opacity: 0; height: 0;")
              li(style="opacity: 0; height: 0;")

        #modal-wrapper(v-show="showModal" style="display: none;")
          .shade(@click="showModal=false")
            .container(ng-click="$event.stopPropagation();")
              header
                .title 
                  h6 {{modalBookRecommendations.length}} Recommendation
                    span(v-show="modalBookRecommendations.length !== 1") s
                      |  for 
                  h4 {{modalBookTitle}}
