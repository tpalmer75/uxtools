  body(ng-init="$root.showMenu = false" ng-controller="booksCtrl")
    header#main-header
      .top-bar
        h1.screen-reader UX Library
        .wrapper
          .left
            a(href="/")
              img#logo(src="../img/uxtools-logo.svg" alt="UX Tools")
          .right
            ul
              li
                a(href="/tools") 
                  div(class="icon" title="UX Tools Newsletter")
                  span Tools
              li
                a(href="/library") 
                  span Library
              li
                a(href="https://blog.uxtools.co") 
                  span Blog
              li
                a(href="/about.html") 
                  span About
              li
                a(href="http://newsletter.uxtools.co")
                  button.small
                    | Newsletter
          #hamburger(ng-click="$root.showMenu = true")
            .icon
              include ../img/icons/menu.svg
            span Menu
      #sidebar(ng-class="{'show-menu': $root.showMenu}")
        #shade.shade(ng-click="$root.showMenu = false")
          .container
            ul
              li
                a(href="/tools") 
                  span Tools
              li
                a(href="/library") 
                  span Library
              li
                a(href="https://blog.uxtools.co") 
                  span Blog
              li
                a(href="/about.html") 
                  span About
              li
                a(href="http://newsletter.uxtools.co")
                  include ../img/icons/email.svg
                  span Newsletter
            #close.close(ng-click="$root.showMenu = false")
              include ../img/icons/close.svg
      .bottom-bar
        .wrapper
          #search
            input(placeholder="Search..." ng-model="searchTerm")
            include ../img/icons/magnify.svg
          #filters
            //- select
            //-   option Popularity
            //-   option Title
            //-   option Release Date
            select(name="categoryFilter" ng-model="categoryData.categoryModel.tags")
              option(ng-repeat="option in categoryData.categoryOptions" value="{{option.value}}") {{option.name}}
                
    section
      .wrapper
        ul#books
          li(ng-repeat="book in books | filter: categoryData.categoryModel.tags | filter: searchTerm | orderBy: 'recommendations.length' : true")
            .image-container
              a(href="{{book.url}}" target="_blank" title="{{book.title}}")
                img.cover(
                  alt="{{book.title}}" 
                  ng-src="../img/book-covers/{{book.image}}")
            .book-info
              a(href="{{book.url}}" target="_blank" title="{{book.title}}")
                h4.title {{ book.title | limitTo: 60 }}{{ book.title.length > 60 ? '...' : ''}}
              h5
                em by 
                | {{ book.author }}
              ul.tags
                li(ng-repeat="tag in book.tags" ng-click="categoryData.categoryModel.tags = tag") {{ tag }}
              ul.recommendations
                li
                  include ../img/icons/bookmark.svg
                li.count {{book.recommendations.length}}
                //-li.separator
                li(ng-repeat="list in book.recommendations | orderBy: random(book.recommendations.length)") 
                  img(ng-src="../img/book-recommendations/{{bookLists[list].image}}")
                //-li.view-all View all
          li(style="opacity: 0; height: 0;")
          li(style="opacity: 0; height: 0;")


    

