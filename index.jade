html(ng-app="testApp")
  head
    link(href='https://fonts.googleapis.com/css?family=Slabo+13px|Roboto+Condensed:400,700,400italic' rel='stylesheet' type='text/css')
    link(href="css/style.css" rel="stylesheet" type="text/css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.6/angular.min.js")
    script(src="js/app.js")
  header
    .wrapper
      h1 All the tools, ever.
      p Well, not quite. But getting there! See one I missed? 
        a(href="http://www.twitter.com/@thpalmer75") @thpalmer75
  section
    .wrapper
      .shadow-wrapper
        table(ng-controller="testCtrl")
          thead
            tr
              th
              th Name
              th(colspan="4") Platform
              th Design
              th Import
              th Animations
              th Navigation
              th Transitions
              th Data
              th Code
              th Remote Test
              th Sharing
          tbody
            tr(ng-repeat="app in testObjects | orderBy:'name'")
              td
                a(ng-href="{{app.url}}" title="{{app.url}}")
                  img(ng-src="{{app.image}}")
              td 
                a(ng-href="{{app.url}}" title="{{app.url}}") {{ app.name }}
              td
                div(ng-include="'img/icons/apple.svg'" ng-show="app.mac" title="Mac")
              td
                div(ng-include="'img/icons/windows.svg'" ng-show="app.windows" title="Windows")
              td
                div(ng-include="'img/icons/wifi.svg'" ng-show="app.web" title="Web")
              td
                div(ng-include="'img/icons/apple-ios.svg'" ng-show="app.ios" title="iOS")
              td
                div(ng-include="'img/icons/check.svg'" ng-show="app.design" title="Design from scratch")
              td
                img(ng-src="img/icons/sketch.png" ng-show="app.sketch" title="Sketch")
                img(ng-src="img/icons/photoshop.png" ng-show="app.photoshop" title="Photoshop")
              td
                div(ng-include="'img/icons/check.svg'" ng-show="app.micro")
              td
                div(ng-include="'img/icons/check.svg'" ng-show="app.navigation")
              td
                div(ng-include="'img/icons/check.svg'" ng-show="app.transition")
              td
                div(ng-include="'img/icons/check.svg'" ng-show="app.data")
              td
                div(ng-include="'img/icons/check.svg'" ng-show="app.code")
              td
                div(ng-include="'img/icons/check.svg'" ng-show="app.remote")
              td
                div(ng-include="'img/icons/wifi.svg'" ng-show="app.shareWeb" title="Web")
                div(ng-include="'img/icons/desktop-mac.svg'" ng-show="app.shareDesktop" title="Desktop")
                div(ng-include="'img/icons/apple-ios.svg'" ng-show="app.shareIos" title="iOS")
                div(ng-include="'img/icons/watch.svg'" ng-show="app.shareWatch" title="Apple Watch")
                div(ng-include="'img/icons/android.svg'" ng-show="app.shareAndroid" title="Android")

