table#scroll-table(fixed-table)
  thead#fixed-header
    tr
      th(ng-repeat="filter in filters" class="fixed-header" ng-if="isFilterVisible(filter.title)")
        span(tooltips tooltip-side="bottom" tooltip-template="{{filter.tipText}}") {{ filter.title }}
  tbody
    tr(ng-repeat="app in prototypingTools | orderBy:['name', orderValue]")
      td(class="fixed-col")
        a(ng-href="{{app.url}}" title="{{app.url}}" target="_blank")
          img(alt="{{app.name}} Logo" src="../img/blank.png" ng-style="{{app.image}}")
        .star(ng-if="app.taylorChoice")
          include ../img/icons/star.svg

      td 
        a(ng-href="{{app.url}}" title="{{app.url}}" target="_blank") {{ app.name }} {{orderValue}}


      td.colspan-5(ng-if="isFilterVisible('Platform');")
        div.flex-wrapper
          div.flex-col
            div(ng-if="app.platforms.web" tooltips tooltip-template="Web")
              div(title="Web")
                include ../img/icons/cloud-outline.svg
          div.flex-col
            div(ng-if="app.platforms.mac" tooltips tooltip-template="Mac")
              div(title="Mac")
                include ../img/icons/apple.svg
          div.flex-col
            div(ng-if="app.platforms.windows" tooltips tooltip-template="Windows")  
              div(title="Windows")
                include ../img/icons/windows.svg
          div.flex-col
            div(ng-if="app.platforms.iOS" tooltips tooltip-template="iOS")
              div(title="iOS")
                include ../img/icons/apple-ios.svg
          div.flex-col
            div(ng-if="app.platforms.android" tooltips tooltip-template="Android")
              div(title="Android")
                include ../img/icons/android.svg

      td(ng-if="isFilterVisible('Free');")
        div(ng-if="app.pricing.free")
          include ../img/icons/check.svg
      td(style="min-width: 100px" ng-if="isFilterVisible('Subscription');")
        span {{app.pricing.subscription}}
      td(ng-if="isFilterVisible('Purchase');")
        span {{app.pricing.purchase}}
        
      td(ng-if="isFilterVisible('Design');")
        div(ng-if="app.design" title="Design from scratch")
          include ../img/icons/check.svg


      td.colspan-5(ng-if="isFilterVisible('Import');")
        div.flex-col
          div(tooltips tooltip-template="Sketch")
            img(ng-src="../img/icons/sketch.png" ng-if="app.import.sketch" title="Sketch")
        div.flex-col
          div(tooltips tooltip-template="Photoshop")
            img(ng-src="../img/icons/photoshop.png" ng-if="app.import.photoshop" title="Photoshop")
        div.flex-col
          div(tooltips tooltip-template="Balsamiq")
            img(ng-src="../img/icons/balsamiq.png" ng-if="app.import.balsamiq" title="balsamiq")
        div.flex-col
          div(tooltips tooltip-template="Dropbox")
            img(ng-src="../img/icons/dropbox.png" ng-if="app.import.dropbox" title="dropbox")
        div.flex-col
          div(tooltips tooltip-template="Mobile Camera")
            div(ng-if="app.import.camera" title="camera")
              include ../img/icons/camera.svg


      td(ng-if="isFilterVisible('Animations');")
        div(ng-if="app.micro")
          include ../img/icons/check.svg


      td(ng-if="isFilterVisible('Navigation');")
        div(ng-if="app.navigation")
          include ../img/icons/check.svg


      td(ng-if="isFilterVisible('Transitions');")
        div(ng-if="app.transition")
          include ../img/icons/check.svg


      td(ng-if="isFilterVisible('Data');")
        div(ng-if="app.data")
          include ../img/icons/check.svg


      td(ng-if="isFilterVisible('Code');")
        div(ng-if="app.code")
          include ../img/icons/check.svg


      td.colspan-8(ng-if="isFilterVisible('Sharing');")
        div.flex-col
          div(ng-if="app.sharing.web" tooltips tooltip-template="Web")
            div(title="Web")
              include ../img/icons/cloud-outline.svg
        div.flex-col
          div(ng-if="app.sharing.iOS" tooltips tooltip-template="iOS")
            div(title="iOS")
              include ../img/icons/apple-ios.svg
        div.flex-col
          div(ng-if="app.sharing.android" tooltips tooltip-template="Android")
            div(title="Android")
              include ../img/icons/android.svg
        div.flex-col
          div(ng-if="app.sharing.mac" tooltips tooltip-template="Mac")
            div(title="Mac")
              include ../img/icons/apple.svg
        div.flex-col
          div(ng-if="app.sharing.windows" tooltips tooltip-template="Windows")
            div(title="Windows")
              include ../img/icons/windows.svg
        div.flex-col
          div(ng-if="app.sharing.appleWatch" tooltips tooltip-template="Apple Watch")
            div(title="Apple Watch")
              include ../img/icons/watch.svg
        div.flex-col
          div(ng-if="app.sharing.appleTv" tooltips tooltip-template="Apple TV")
            div(title="Apple TV")
              include ../img/icons/appletv.svg
        div.flex-col
          div(ng-if="app.sharing.pdf" tooltips tooltip-template="PDF")
            div(title="PDF")
              include ../img/icons/file-pdf-box.svg
        div.flex-col
          div(ng-if="app.sharing.html" tooltips tooltip-template="HTML")
            div(title="HTML")
              include ../img/icons/html.svg

      td(ng-if="isFilterVisible('Tasks');")
        div(ng-if="app.tasks")
          include ../img/icons/check.svg


      td(ng-if="isFilterVisible('Analytics');")
        div(ng-if="app.analytics")
          include ../img/icons/check.svg


      td(ng-if="isFilterVisible('Heatmap');")
        div(ng-if="app.heatmap")
          include ../img/icons/check.svg

