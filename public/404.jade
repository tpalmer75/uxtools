    meta(name="msapplication-TileColor" content="#ffffff")
    meta(name="msapplication-TileImage" content="/ms-icon-144x144.png")
    meta(name="theme-color" content="#ffffff")
    link(href='https://fonts.googleapis.com/css?family=Poppins:600|Roboto+Condensed:400,700,400italic' rel='stylesheet' type='text/css')
    link(href="css/style.css?ver=1.1" rel="stylesheet" type="text/css")

  body
    header#main-header
      .top-bar
        h1.screen-reader UX Tools
        .wrapper
          .left
            a(href="/")
              img#logo(src="img/uxtools-logo.svg" alt="UX Tools")
          .right
            ul
              li
                a(href="/tools") 
                  span Tools
              //- li
              //-   a(href="/library") 
              //-     span Library
              li
                a(href="https://blog.uxtools.co") 
                  span Blog
              li
                a(href="http://newsletter.uxtools.co")
                  button.small
                    | Newsletter
          #hamburger
            .icon
              include img/icons/menu.svg
            span Menu
      #sidebar
        #shade.shade
          .container
            ul
              li
                a(href="/tools") 
                  span Tools
              //- li
              //-   a(href="/library") 
              //-     span Library
              li
                a(href="https://blog.uxtools.co") 
                  span Blog
              li
                a(href="http://newsletter.uxtools.co")
                  include img/icons/email.svg
                  span Newsletter
            #close.close
              include img/icons/close.svg
    section#hero.error-404
      .wrapper
        h1.dark 404
        .circle
        p Sorry! The site was restructured recently, so you might have clicked a dead link. Were you looking for the 
          a(href="/tools") tools
          | , 
          a(href="https://newsletter.uxtools.co") newsletter
          |, or 
          a(href="https://blog.uxtools.co") blog
          | ?
        a(href="/")
          button.blue UX Tools Home
           include img/icons/arrow-right.svg
    script(type="text/javascript").
      
      var hamburger = document.getElementById("hamburger");
      var sidebar = document.getElementById("sidebar");
      var shade = document.getElementById("shade");
      var close = document.getElementById("close");

      hamburger.addEventListener("click", function() {
        sidebar.classList.add("show-menu");
      }, false);

      shade.addEventListener("click", function() {
        sidebar.classList.remove("show-menu");
      }, false);

      close.addEventListener("click", function() {
        sidebar.classList.remove("show-menu");
      }, false);
