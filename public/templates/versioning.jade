script(type="text/x-template" id="versioning-tools")
	div
		table#scroll-table(v-scrolltable="")
			thead#fixed-header
				tr
					th(v-for="column in toolsData.columns" class="fixed-header")
						span(style="display: block; position: relative" v-tooltip.bottom-center="column.tipText") {{ column.title }}
							//- include ../img/icons/information-small.svg
			tbody
				tr(v-for="app in computedTools")

					//- Image
					td(class="fixed-col")
						a(v-bind:href="app.url" v-bind:title="app.url" target="_blank")
							img(v-bind:alt="app.name + 'Logo'" src="../img/blank.png" v-bind:style="app.image")

					//- Name
					td(class="name-col")
						a(v-bind:href="app.url" v-bind:title="app.url" target="_blank") {{ app.name }}

					//- Platforms
					td.colspan-3
						div.flex-wrapper
							div.flex-col
								div(v-if="app.platforms.web" v-tooltip.bottom-center="'Web'")
									div(title="Web")
										include ../img/icons/cloud-outline.svg
							div.flex-col
								div(v-if="app.platforms.mac" v-tooltip.bottom-center="'Mac'")
									div(title="Mac")
										include ../img/icons/apple.svg
							//- div.flex-col
							//- 	div(v-if="app.platforms.windows" v-tooltip.bottom-center="'Windows'") 
							//- 		div(title="Windows")
							//- 			include ../img/icons/windows.svg

					//- Pricing
					td
						div(v-if="app.pricing.free" v-tooltip.bottom-center="'Free'")
							include ../img/icons/check.svg
					td(style="min-width: 100px")
						span(v-tooltip.bottom-center="'Subscription'") {{app.pricing.subscription}}
					td
						span(v-tooltip.bottom-center="'Purchase'") {{app.pricing.purchase}}
					td
						span(v-tooltip.bottom-center="'Team'") {{app.pricing.team}}

					//- Import
					td.colspan-2
						div.flex-col
							div(v-tooltip.bottom-center="'Sketch'")
								img(src="../img/icons/sketch.png" v-if="app.import.sketch" title="Sketch")
						div.flex-col
							div(v-tooltip.bottom-center="'Photoshop'")
								img(src="../img/icons/photoshop.png" v-if="app.import.photoshop" title="Photoshop")
						div.flex-col
							div(v-tooltip.bottom-center="'Illustrator'")
								img(src="../img/icons/illustrator.png" v-if="app.import.illustrator" title="Illustrator")

					//- Git
					td
						div(v-if="app.git" v-tooltip.bottom-center="'Git'")
							include ../img/icons/check.svg

					//- Symbols
					td
						div(v-if="app.symbols"  v-tooltip.bottom-center="'Symbols'")
							include ../img/icons/check.svg

					//- Documents
					td
						div(v-if="app.documents" v-tooltip.bottom-center="'Documents'")
							include ../img/icons/check.svg

					//- Branching
					td
						div(v-if="app.branching" v-tooltip.bottom-center="'Branching'")
							include ../img/icons/check.svg

					//- Preview
					td
						div(v-if="app.preview" v-tooltip.bottom-center="'Preview'")
							include ../img/icons/check.svg

					//- Compare
					td
						div(v-if="app.compare" v-tooltip.bottom-center="'Compare'")
							include ../img/icons/check.svg

					//- Comments
					td
						div(v-if="app.comments" v-tooltip.bottom-center="'Comments'")
							include ../img/icons/check.svg

					//- Sharing
					td.colspan-5
						div.flex-col
							div(v-if="app.sharing.web" v-tooltip.bottom-center="'Web'")
								div(title="Web")
									include ../img/icons/cloud-outline.svg
						//- div.flex-col
						//- 	div(v-if="app.sharing.html" v-tooltip.bottom-center="'Static HTML file'")
						//- 		div(title="HTML")
						//- 			include ../img/icons/html.svg
						div.flex-col
							div(v-if="app.sharing.mac" v-tooltip.bottom-center="'Mac'")
								div(title="Mac")
									include ../img/icons/apple.svg
						//- div.flex-col
						//- 	div(v-if="app.sharing.windows" v-tooltip.bottom-center="'Windows'")
						//- 		div(title="Windows")
						//- 			include ../img/icons/windows.svg

					//- Integrations
					td(style="min-width: 100px")
						div.flex-col
							div(v-if="app.integrations.slack" v-tooltip.bottom-center="'Slack'")
								img(src="../img/icons/slack.png" title="Slack")
						div.flex-col
							div(v-if="app.integrations.gitlab" v-tooltip.bottom-center="'GitLab'")
								img(src="../img/icons/gitlab.png" title="GitLab")



		//- a.new-tool(href="https://docs.google.com/forms/d/e/1FAIpQLSdTwq-eAGVFEOo6r3yjWDVExbE_h5QoryReIBmKG5PCh_b--w/viewform?usp=sf_link" title="Submit a new tool")
		//- 	include ../img/icons/plus-box-outline.svg
		//- 	span Submit a new tool
		div#promotion-space(style="margin-top: 50px;")
			include ../templates/promotion-missing.jade
			ins.adsbygoogle(style='display:block', data-ad-client='ca-pub-2169456968850651', data-ad-slot='8125149927', data-ad-format='auto')