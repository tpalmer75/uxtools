script(type="text/x-template" id="monitoring-tools")
	div
		table#scroll-table(v-scrolltable="")
			thead#fixed-header
				tr
					th(v-for="column in toolsData.columns" class="fixed-header")
						span(style="display: block; position: relative" v-tooltip.bottom-center="column.tipText") {{ column.title }}
			tbody
				tr(v-for="app in computedTools")
					td(class="fixed-col")
						a(v-bind:href="app.url" v-bind:title="app.url" target="_blank")
							img(v-bind:alt="app.name + 'Logo'" src="../img/blank.png" v-bind:style="app.image")
					td(class="name-col")
						a(v-bind:href="app.url" v-bind:title="app.url" target="_blank") {{ app.name }}
					td
						div(v-if="app.pricing.free")
							include ../img/icons/check.svg
					td(style="min-width: 100px")
						span(v-tooltip.bottom-center="'Subscription'") {{app.pricing.subscription}}
					td
						span(v-tooltip.bottom-center="'Price'") {{app.pricing.purchase}}
					//- td
					//- 	div.flex-wrapper
					//- 		div.flex-col
					//- 			div(v-if="app.platforms.web" v-tooltip.bottom-center="'Web'")
					//- 				div(title="Web")
					//- 					include ../img/icons/cloud-outline.svg
					td
						div(v-if="app.playback" v-tooltip.bottom-center="'Playback'")
							include ../img/icons/check.svg
					td
						div(v-if="app.skipInactivity" v-tooltip.bottom-center="'Skip Inactivity'")
							include ../img/icons/check.svg
					td
						div(v-if="app.playbackSpeed" v-tooltip.bottom-center="'Speed'")
							include ../img/icons/check.svg
					td
						div(v-if="app.jumpBack" v-tooltip.bottom-center="'Jump Back'")
							include ../img/icons/check.svg
					td
						div(v-if="app.console" v-tooltip.bottom-center="'Console'")
							include ../img/icons/check.svg
					td
						div(v-if="app.heatmaps" v-tooltip.bottom-center="'Heatmaps'")
							include ../img/icons/check.svg
					td
						div(v-if="app.location" v-tooltip.bottom-center="'Location'")
							include ../img/icons/check.svg
					td
						div(v-if="app.formAnalytics" v-tooltip.bottom-center="'Form Stats'")
							include ../img/icons/check.svg
					td
						div(v-if="app.polls" v-tooltip.bottom-center="'Polls'")
							include ../img/icons/check.svg
					td
						div.flex-col
							div(v-if="app.export.html" v-tooltip.bottom-center="'Static HTML file'")
								div(title="HTML")
									include ../img/icons/html.svg
