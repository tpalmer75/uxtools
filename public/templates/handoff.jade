script(type="text/x-template" id="handoff-tools")
	div
		table#scroll-table(v-scrolltable="")
			thead#fixed-header
				tr
					th(v-for="column in toolsData.columns" class="fixed-header")
						span(style="display: block; position: relative" v-tooltip.bottom-center="column.tipText") {{ column.title }}
			tbody
				tr(v-for="app in computedTools")
					td(class="fixed-col")
						a(v-bind:href="app.url" v-bind:title="app.url" target="_blank")
							img(v-bind:alt="app.name + 'Logo'" src="../img/blank.png" v-bind:style="app.image")
					td(class="name-col")
						a(v-bind:href="app.url" v-bind:title="app.url" target="_blank") {{ app.name }}
					td.colspan-3
						div.flex-wrapper
							div.flex-col
								div(v-if="app.platforms.web" v-tooltip.bottom-center="'Web'")
									div(title="Web")
										include ../img/icons/cloud-outline.svg
							div.flex-col
								div(v-if="app.platforms.mac" v-tooltip.bottom-center="'Mac'")
									div(title="Mac")
										include ../img/icons/apple.svg
							div.flex-col
								div(v-if="app.platforms.windows" v-tooltip.bottom-center="'Windows'") 
									div(title="Windows")
										include ../img/icons/windows.svg
							div.flex-col
								div(v-if="app.platforms.linux" v-tooltip.bottom-center="'Linux'")
									div(title="Linux")
										include ../img/icons/linux.svg
					td
						div(v-if="app.pricing.free")
							include ../img/icons/check.svg
					td(style="min-width: 100px")
						span {{app.pricing.subscription}}
					td
						span {{app.pricing.purchase}}

					td.colspan-2
						div.flex-col
							div(v-tooltip.bottom-center="'Sketch'")
								img(src="../img/icons/sketch.png" v-if="app.programs.sketch" title="Sketch")
						div.flex-col
							div(v-tooltip.bottom-center="'Photoshop'")
								img(src="../img/icons/photoshop.png" v-if="app.programs.photoshop" title="Photoshop")
						div.flex-col
							div(v-tooltip.bottom-center="'Illustrator'")
								img(src="../img/icons/illustrator.png" v-if="app.programs.illustrator" title="Illustrator")
						div.flex-col
							div(v-tooltip.bottom-center="'Indesign'")
								img(src="../img/icons/indesign.png" v-if="app.programs.indesign" title="Indesign")
					td
						div(v-if="app.specs")
							include ../img/icons/check.svg
					td
						div(v-if="app.automatic")
							include ../img/icons/check.svg
					td
						div(v-if="app.assets")
							include ../img/icons/check.svg
					td
						div(v-if="app.measure")
							include ../img/icons/check.svg
					//- td
					//- 	div(v-if="app.css")
					//- 		include ../img/icons/check.svg
					td
						div(v-if="app.variables")
							include ../img/icons/check.svg
					td
						div(v-if="app.guides")
							include ../img/icons/check.svg
					td
						div(v-if="app.layers")
							include ../img/icons/check.svg
					td
						div(v-if="app.comments")
							include ../img/icons/check.svg
					td
						div(v-if="app.revisions")
							include ../img/icons/check.svg
					td.colspan-5
						div.flex-col
							div(v-if="app.sharing.web" v-tooltip.bottom-center="'Web'")
								div(title="Web")
									include ../img/icons/cloud-outline.svg
						div.flex-col
							div(v-if="app.sharing.html" v-tooltip.bottom-center="'Static HTML file'")
								div(title="HTML")
									include ../img/icons/html.svg
						div.flex-col
							div(v-if="app.sharing.mac" v-tooltip.bottom-center="'Mac'")
								div(title="Mac")
									include ../img/icons/apple.svg
						div.flex-col
							div(v-if="app.sharing.windows" v-tooltip.bottom-center="'Windows'")
								div(title="Windows")
									include ../img/icons/windows.svg
						div.flex-col
							div(v-if="app.sharing.linux" v-tooltip.bottom-center="'Linux'")
								div(title="Linux")
									include ../img/icons/linux.svg
						div.flex-col
							div(v-if="app.sharing.xcode" v-tooltip.bottom-center="'Xcode'")
								img(src="../img/icons/xcode.png" title="Xcode")
						div.flex-col
							div(v-if="app.sharing.androidStudio" v-tooltip.bottom-center="'Android Studio'")
								img(src="../img/icons/androidstudio.png" title="Android Studio")
					td(style="min-width: 100px")
						div(v-if="app.integrations.slack" v-tooltip.bottom-center="'Slack'")
								img(src="../img/icons/slack.png" title="Slack")
		a.new-tool(href="https://docs.google.com/forms/d/e/1FAIpQLSdTwq-eAGVFEOo6r3yjWDVExbE_h5QoryReIBmKG5PCh_b--w/viewform?usp=sf_link" title="Submit a new tool")
			include ../img/icons/plus-box-outline.svg
			span Submit a new tool